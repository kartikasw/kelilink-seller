<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="@dimen/image_view_input"
                android:height="@dimen/image_view_input"/>
            <stroke android:width="1dp"
                android:dashGap="8dp"
                android:dashWidth="10dp"
                android:color="@color/dark_gray"/>
            <corners android:radius="@dimen/corner_button"/>
        </shape>
    </item>
    <item
        android:gravity="center"
        android:drawable="@drawable/ic_add_image"
        android:width="@dimen/button_small"
        android:height="@dimen/button_small"/>
</layer-list>