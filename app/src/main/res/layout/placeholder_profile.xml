<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pp_tv_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_layout"
                android:layout_marginTop="@dimen/margin_component_more"
                android:background="@drawable/shimmer_placeholder"
                android:textAppearance="@style/TextAppearance.KelilinkSeller.Heading6"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pp_tv_category"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_component_small"
                android:background="@drawable/shimmer_placeholder"
                android:textAppearance="@style/TextAppearance.KelilinkSeller.Caption"
                app:layout_constraintEnd_toStartOf="@+id/pp_guideline2"
                app:layout_constraintStart_toStartOf="@id/pp_tv_store_name"
                app:layout_constraintTop_toBottomOf="@id/pp_tv_store_name" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/margin_layout"
                android:layout_marginTop="@dimen/margin_component_more"
                android:src="@drawable/dots"
                app:layout_constraintTop_toBottomOf="@id/pp_tv_category"
                tools:ignore="ContentDescription,ImageContrastCheck"
                tools:layout_editor_absoluteX="16dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pp_guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pp_guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/pp_guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <TextView
                android:id="@+id/pp_tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_layout"
                android:layout_marginTop="@dimen/margin_layout"
                android:background="@drawable/shimmer_placeholder"
                android:textAppearance="@style/TextAppearance.KelilinkSeller.Subtitle2"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toStartOf="@+id/pp_guideline1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/pp_btn_edit_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_component_more"
                android:background="@drawable/shimmer_placeholder"
                android:textAppearance="@style/TextAppearance.KelilinkSeller.Body1"
                app:layout_constraintEnd_toStartOf="@+id/pp_guideline2"
                app:layout_constraintStart_toStartOf="@+id/pp_tv_title"
                app:layout_constraintTop_toBottomOf="@+id/pp_tv_title" />

            <TextView
                android:id="@+id/pp_btn_edit_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_component_more"
                android:background="@drawable/shimmer_placeholder"
                android:textAppearance="@style/TextAppearance.KelilinkSeller.Body1"
                app:layout_constraintEnd_toStartOf="@+id/pp_guideline2"
                app:layout_constraintStart_toStartOf="@+id/pp_btn_edit_profile"
                app:layout_constraintTop_toBottomOf="@+id/pp_btn_edit_profile" />

            <TextView
                android:id="@+id/pp_btn_edit_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_component_more"
                android:background="@drawable/shimmer_placeholder"
                android:textAppearance="@style/TextAppearance.KelilinkSeller.Body1"
                app:layout_constraintEnd_toStartOf="@+id/pp_guideline3"
                app:layout_constraintStart_toStartOf="@+id/pp_btn_edit_email"
                app:layout_constraintTop_toBottomOf="@+id/pp_btn_edit_email" />

            <TextView
                android:id="@+id/pp_tv_title_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shimmer_placeholder"
                android:layout_marginTop="@dimen/margin_layout_more"
                android:textAppearance="@style/TextAppearance.KelilinkSeller.Subtitle2"
                android:textColor="@color/orange"
                app:layout_constraintEnd_toEndOf="@+id/pp_tv_title"
                app:layout_constraintStart_toStartOf="@+id/pp_tv_title"
                app:layout_constraintTop_toBottomOf="@+id/pp_btn_edit_password"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/pp_btn_logout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_component_more"
                android:background="@drawable/shimmer_placeholder"
                android:gravity="center_vertical"
                android:paddingHorizontal="@dimen/margin_layout"
                android:textAppearance="@style/TextAppearance.KelilinkSeller.Body1"
                app:layout_constraintEnd_toStartOf="@+id/pp_guideline2"
                app:layout_constraintStart_toStartOf="@+id/pp_btn_edit_email"
                app:layout_constraintTop_toBottomOf="@+id/pp_tv_title_other" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>